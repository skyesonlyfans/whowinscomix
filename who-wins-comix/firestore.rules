rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function signedIn() { return request.auth != null; }

    match /users/{uid} {
      allow read: if signedIn();
      allow create: if signedIn() && request.auth.uid == uid;
      allow update: if signedIn() && request.auth.uid == uid;
      allow delete: if false;
    }

    match /usernames/{usernameLower} {
      allow read: if signedIn();
      allow create: if signedIn();
      allow update, delete: if false;
    }

    match /friendRequests/{id} {
      allow read, create: if signedIn();
      allow update: if signedIn() && (request.auth.uid == resource.data.toUid || request.auth.uid == resource.data.fromUid);
      allow delete: if false;
    }

    match /friends/{uid}/edges/{friendUid} {
      allow read: if signedIn() && request.auth.uid == uid;
      allow create: if signedIn();
      allow delete: if signedIn() && request.auth.uid == uid;
    }

    match /comics/{comicId} {
      allow read: if signedIn();
      allow create: if signedIn() && request.resource.data.ownerUid == request.auth.uid;
      allow update, delete: if signedIn() && resource.data.ownerUid == request.auth.uid;
    }

    match /posts/{postId} {
      allow read: if signedIn();
      allow create: if signedIn() && request.resource.data.authorUid == request.auth.uid;
      allow update, delete: if false;
    }
  }
}
