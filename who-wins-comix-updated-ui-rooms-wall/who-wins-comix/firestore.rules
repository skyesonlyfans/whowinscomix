rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function signedIn() { return request.auth != null; }

    match /users/{uid} {
      allow read: if signedIn();
      allow create: if signedIn() && request.auth.uid == uid;
      allow update: if signedIn() && request.auth.uid == uid;
      allow delete: if false;
    }

    match /usernames/{usernameLower} {
      allow read: if signedIn();
      // Reserved during onboarding; keep simple for MVP.
      allow create: if signedIn();
      allow update, delete: if false;
    }

    match /friendRequests/{id} {
      allow read: if signedIn() && (resource.data.fromUid == request.auth.uid || resource.data.toUid == request.auth.uid);
      allow create: if signedIn() && request.resource.data.fromUid == request.auth.uid;
      allow update: if signedIn() && (resource.data.fromUid == request.auth.uid || resource.data.toUid == request.auth.uid);
      allow delete: if false;
    }

    match /friends/{uid}/edges/{friendUid} {
      allow read: if signedIn() && request.auth.uid == uid;
      allow create, update, delete: if signedIn() && request.auth.uid == uid;
    }

    match /comics/{comicId} {
      allow read: if signedIn(); // share links work while signed in
      allow create: if signedIn() && request.resource.data.ownerUid == request.auth.uid;
      allow update, delete: if signedIn() && resource.data.ownerUid == request.auth.uid;
    }

    // Rooms (co-op battle + shared thread)
    match /rooms/{roomId} {
      allow read: if resource.data.visibility == "public" || (signedIn() && request.auth.uid in resource.data.participants);
      allow create: if signedIn()
        && request.resource.data.createdBy == request.auth.uid
        && request.auth.uid in request.resource.data.participants;
      allow update: if signedIn() && request.auth.uid in resource.data.participants;
      allow delete: if false;
    }

    // Top-level invite collection for simple querying
    match /roomInvites/{inviteId} {
      allow read: if signedIn() && (request.auth.uid == resource.data.toUid || request.auth.uid == resource.data.fromUid);
      allow create: if signedIn() && request.resource.data.fromUid == request.auth.uid;
      allow update: if signedIn() && (request.auth.uid == resource.data.toUid || request.auth.uid == resource.data.fromUid);
      allow delete: if false;
    }

    // Wall threads + posts
    match /threads/{threadId} {
      allow read: if resource.data.visibility == "public"
        || (signedIn() && resource.data.visibility == "friends" && request.auth.uid in resource.data.allowedUids);

      allow create: if signedIn()
        && request.resource.data.createdBy == request.auth.uid
        && (request.resource.data.visibility == "public"
            || (request.resource.data.visibility == "friends" && request.auth.uid in request.resource.data.allowedUids));

      allow update: if signedIn()
        && (request.auth.uid == resource.data.createdBy
            || (resource.data.visibility == "friends" && request.auth.uid in resource.data.allowedUids));

      allow delete: if false;

      match /posts/{postId} {
        allow read: if resource.data.visibility == "public"
          || (signedIn() && resource.data.visibility == "friends" && request.auth.uid in resource.data.allowedUids);

        allow create: if signedIn() && request.resource.data.authorUid == request.auth.uid;
        allow update, delete: if false;
      }
    }

    // Legacy (older build)
    match /posts/{postId} {
      allow read: if signedIn();
      allow create: if signedIn() && request.resource.data.authorUid == request.auth.uid;
      allow update, delete: if false;
    }
  }
}
